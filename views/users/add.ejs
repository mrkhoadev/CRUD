<h1>Thêm người dùng</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for="name">Tên</label>
    <input
      type="text"
      id="name"
      name="name"
      class="form-control"
      placeholder="Tên..."
      value="<%= req?.old?.name %>"
    />
    <span class="text-danger"><%= req?.errors?.name %></span>
  </div>
  <div class="mb-3">
    <label for="email">Email</label>
    <input
      type="text"
      id="email"
      name="email"
      class="form-control"
      placeholder="Email..."
      value="<%= req?.old?.email %>"
    />
    <span class="text-danger"><%= req?.errors?.email %></span>
  </div>
  <div class="mb-3">
    <label for="password">Mật khẩu</label>
    <input
      type="text"
      id="password"
      name="password"
      class="form-control"
      placeholder="Mật khẩu..."
      value="<%= req?.old?.password %>"
    />
    <span class="text-danger"><%= req?.errors?.password %></span>
  </div>
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
      <option value="0" <%= +req?.old?.status === 0 ? 'selected': ''  %>>Chưa kích hoạt</option>
      <option value="1" <%= +req?.old?.status === 1 ? 'selected': ''  %>>Kích hoạt</option>
    </select>
    <span class="text-danger"><%= req?.errors?.status %></span>
  </div>
  <button class="btn btn-primary">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
