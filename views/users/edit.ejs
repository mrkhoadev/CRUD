<h1>Sửa người dùng</h1>
<% if (user) { %>
  <form action="" method="POST">
    <div class="mb-3">
      <label for="name">Tên</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        placeholder="Tên..."
        value="<%= user.name %>"
      />
      <span class="text-danger"><%= req?.errors?.name %></span>
    </div>
    <div class="mb-3">
      <label for="email">Email</label>
      <input
        type="text"
        id="email"
        name="email"
        class="form-control"
        placeholder="Email..."
        value="<%= user?.email %>"
      />
      <span class="text-danger"><%= req?.errors?.email %></span>
    </div>
    <div class="mb-3">
      <label for="">Trạng thái</label>
      <select name="status" class="form-select">
        <option value="0" <%= (user?.status === false) ? 'selected': ''  %>>Chưa kích hoạt</option>
        <option value="1" <%= (user?.status === true) ? 'selected': ''  %>>Kích hoạt</option>
      </select>
      <span class="text-danger"><%= req?.errors?.status %></span>
    </div>
    <button class="btn btn-primary">Lưu</button>
    <a href="/users" class="btn btn-danger">Hủy</a>
    <div class="mb-3">
      <span class="text-danger"><%= req?.errors?.id %></span>
    </div>
  </form>  
<% } else { %>
    <h2>Người dùng không tồn tại</h2>
<% } %>
